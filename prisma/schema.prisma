generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model User {
  email               String   @unique
  firstname           String
  id                  Int      @default(autoincrement()) @id
  lastname            String
  password            String
  registeredAt        DateTime @default(now())
  resetToken          String?
  resetTokenTimestamp String?
  updatedAt           DateTime @updatedAt
}
