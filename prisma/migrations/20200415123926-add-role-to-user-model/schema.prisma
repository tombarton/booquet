generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  email               String   @unique
  firstname           String
  id                  Int      @default(autoincrement()) @id
  lastname            String
  password            String
  registeredAt        DateTime @default(now())
  resetToken          String?  @unique
  resetTokenExpiry    DateTime?
  updatedAt           DateTime @updatedAt
  role                Role
}

enum Role {
  ADMIN
  USER
}
