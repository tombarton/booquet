datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int           @default(autoincrement()) @id
  registeredAt DateTime @default(now())
  updatedAt    DateTime   @updatedAt
  name         String?
  email        String        @unique
  firstname String
  lastname String
  password String
  resetToken String?
  resetTokenTimestamp String?
}
