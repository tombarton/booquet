{
  "name": "@booquet/core",
  "version": "0.0.1",
  "description": "A headless ecommerce service",
  "author": "Tom Barton <tom.r.barton@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:save": "npx prisma migrate dev --preview-feature",
    "prisma:update": "npx prisma migrate deploy --preview-feature",
    "prisma:generate": "npx prisma generate",
    "docker:base": "docker build -f Dockerfile.base -t booquet/base ."
  },
  "dependencies": {
    "@nestjs/common": "^7.5.5",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.5.5",
    "@nestjs/graphql": "^7.9.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/terminus": "^7.0.1",
    "@prisma/client": "^2.13.0",
    "apollo-server-express": "^2.19.0",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "contentful": "^8.1.1",
    "contentful-management": "^7.5.0",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.16.1",
    "graphql": "^15.4.0",
    "graphql-redis-subscriptions": "^2.3.1",
    "graphql-subscriptions": "^1.1.0",
    "ioredis": "^4.19.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "postmark": "^2.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "stripe": "^8.127.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.3",
    "@nestjs/schematics": "^7.2.5",
    "@nestjs/testing": "^7.5.5",
    "@prisma/cli": "^2.13.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/ioredis": "^4.17.8",
    "@types/jest": "^26.0.18",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.10",
    "supertest": "^6.0.1",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/core/$1",
      "@common/(.*)": "<rootDir>/common/$1",
      "@root/(.*)": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
