{
  "name": "@booquet/core",
  "version": "0.0.1",
  "description": "A headless ecommerce service",
  "author": "Tom Barton <tom.r.barton@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:save": "npx prisma migrate dev",
    "prisma:update": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "docker:base": "docker build -f Dockerfile.base -t booquet/base ."
  },
  "dependencies": {
    "@nestjs/common": "^8.0.5",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.5",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.5",
    "@nestjs/terminus": "^7.2.0",
    "@prisma/client": "^2.28.0",
    "apollo-server-express": "^2.25.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "contentful": "^8.4.2",
    "contentful-management": "^7.31.0",
    "date-fns": "^2.23.0",
    "graphql": "^15.5.1",
    "graphql-redis-subscriptions": "^2.4.0",
    "graphql-subscriptions": "^1.2.1",
    "ioredis": "^4.27.7",
    "joi": "^17.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "postmark": "^2.7.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "stripe": "^8.167.0"
  },
  "devDependencies": {
    "@apollo/gateway": "^0.36.0",
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.5",
    "jest": "^26.6.3",
    "prisma": "^2.28.0",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "ts-morph": "^11.0.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/core/$1",
      "@common/(.*)": "<rootDir>/common/$1",
      "@root/(.*)": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
