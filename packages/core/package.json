{
  "name": "@booquet/core",
  "version": "0.0.1",
  "description": "A headless ecommerce service",
  "author": "Tom Barton <tom.r.barton@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:save": "npx prisma migrate save --experimental",
    "prisma:update": "npx prisma migrate up --experimental",
    "prisma:generate": "npx prisma generate",
    "postinstall": "yarn prisma:generate",
    "docker:base": "docker build -f Dockerfile.base -t booquet/base ."
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.4.1",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.3.7",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/terminus": "^7.0.1",
    "@prisma/client": "^2.0.0-beta.5",
    "apollo-server-express": "^2.13.1",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "contentful": "^7.14.4",
    "contentful-management": "^5.26.1",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.13.0",
    "graphql": "^14.6.0",
    "graphql-redis-subscriptions": "^2.2.1",
    "graphql-subscriptions": "^1.1.0",
    "ioredis": "^4.16.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "postmark": "^2.5.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "stripe": "^8.51.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@prisma/cli": "^2.0.0-beta.5",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.11",
    "@types/ioredis": "^4.16.2",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@core/(.*)": "<rootDir>/core/$1",
      "@common/(.*)": "<rootDir>/common/$1",
      "@root/(.*)": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.*(ts|tsx)' && tsc --incremental false --noEmit"
    }
  }
}
