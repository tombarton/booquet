generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  email            String    @unique
  firstname        String
  id               String    @default(uuid()) @id
  lastname         String
  password         String
  registeredAt     DateTime  @default(now())
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  updatedAt        DateTime  @updatedAt
  role             Role
  Cart             Cart?
  Order            Order[]
}

enum Role {
  ADMIN
  USER
}

model Product {
  id       String     @id
  name     String
  price    Int
  CartItem CartItem[]
}

model CartItem {
  id        String  @default(uuid()) @id
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int     @default(1)
  cart      Cart    @relation(fields: [cardId], references: [id])
  cardId    String
}

// Cart in the DB is only used for logged in users. This allows us to persist
// the basket across devices/browsers/etc.
model Cart {
  id        String     @default(uuid()) @id
  user      User       @relation(fields: [userId], references: [id])
  userId    String     @unique
  createdAt DateTime   @default(now())
  CartItems CartItem[]
}

model OrderItem {
  id       String @default(uuid()) @id
  title    String
  image    String
  price    Int
  quantity Int
  Order    Order  @relation(fields: [orderId], references: [id])
  orderId  Int
}

// PENDING: The order has been created but the user hasn't completed the payment.
// AWAITING_CONFIRMATION: Waiting for the order/payment to be accepted.
// AWAITING_FULFILLMENT: Waiting for the order to be fulfilled.
// FULFILLED: Order completed and dispatched.
enum OrderStatus {
  PENDING
  AWAITING_CONFIRMATION
  AWAITING_FULFILLMENT
  FULFILLED
}

// User is optional as an order can be created as a guest user.
model Order {
  id        Int         @default(autoincrement()) @id
  items     OrderItem[]
  total     Int
  status    OrderStatus
  chargeId  String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User?       @relation(fields: [userId], references: [id])
  userId    String?
}
